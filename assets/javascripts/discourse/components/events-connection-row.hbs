<td>
  <UserChooser
    @value={{connection.user.username}}
    @onChange={{action "updateUser"}}
    class="connection-user"
    @options={{hash maximum=1 excludeCurrentUser=false}}
  />
</td>

<td>
  <CategoryChooser
    @value={{connection.category_id}}
    class="connection-category"
    onChange={{action (mut connection.category_id)}}
  />
</td>

<td>
  <ComboBox
    @value={{connection.source_id}}
    @content={{sources}}
    @onChange={{action (mut connection.source_id)}}
    class="connection-source"
    options={{hash none="admin.events.connection.source.select"}}
  />
</td>

<td>
  <DButton
    @icon="filter"
    @label="admin.events.filters.label"
    @title="admin.events.filters.title"
    @action={{action "openFilters"}}
    class="show-filters"
  />
</td>

<td class="action-column">
  <ConditionalLoadingSpinner @condition={{loading}} @size="small" />
  <DButton
    @icon="save"
    @title="admin.events.connection.save.title"
    @action={{action "saveConnection"}}
    @disabled={{saveDisabled}}
    class={{saveClass}}
  />
  <DButton
    @action={{removeConnection}}
    @actionParam={{connection}}
    @icon="trash-alt"
    @title="admin.events.connection.remove.title"
    class="btn-danger"
  />
  <DButton
    @action={{action "syncConnection"}}
    @icon="sync"
    @title="admin.events.connection.sync.title"
    class={{syncClass}}
    @disabled={{syncDisabled}}
  />
</td>