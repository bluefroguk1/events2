<DModal
  class="delete-event-modal"
  @title={{i18n "admin.events.event.delete.title"}}
  @closeModal={{@closeModal}}
  @flash={{this.flash}}
>
  <:body>
    <ul class="events">
      {{#each model.events as |event|}}
        <li class="event">{{event.name}}</li>
      {{/each}}
    </ul>
    <div class="target-control">
      <ComboBox
        @content={{deleteTargets}}
        @value={{deleteTarget}}
        @onChange={{action (mut deleteTarget)}}
      />
    </div>
  </:body>
  <:footer>
    <DButton
      @class="btn-primary"
      @action={{action "delete"}}
      @label={{btnLabel}}
      disabled={{destroying}}
    />
    <DButton
      @class="btn-danger"
      @label="cancel"
      @action={{action "cancel"}}
      disabled={{destroying}}
    />
    <ConditionalLoadingSpinner @condition={{destroying}} @size="small" />
  </:footer>
</DModal>